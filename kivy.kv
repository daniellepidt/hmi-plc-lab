Logi:
<Ta>:
    canvas.after:
        Color:
            rgba: 1, .3, .8, .5
        Rectangle:
            pos: self.pos
            size: self.size
        

<Door>:
    canvas.after:
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0, 1, 0,0.5

<Bar>:
    canvas.after:
        Color:
            rgba: 0.5, 0.5, 0.5,1
        Rectangle:
            pos: self.pos
            size: self.size
        

<Limit>:
    canvas.after:
        Color:
            rgba: 1, 0, 0,1
        Rectangle:
            pos: self.pos
            size: self.size

<ElLimit>:
    canvas.after:
        Color:
            rgba: 0, 1, 0,1
        Rectangle:
            pos: self.pos
            size: self.size

<DoorBar>:
    canvas.after:
        Color:
            rgba: 1, 1, 0,1
        Rectangle:
            pos: self.pos
            size: self.size        

<Logi>:
    first:first
    second:second
    third:third
    body:body
    delet:delet
    noora1:noora1
    noora2:noora2
    noora3:noora3
    direction:direction
    lSwitch1:lSwitch1
    lSwitch2:lSwitch2
    lSwitch3:lSwitch3
    bar:bar
    status:status
    doorBar:doorBar
    elFirst:elFirst
    elSecond:elSecond
    elThird:elThird
    doorOpen:doorOpen
    doorClose:doorClose
    Image:
        size:body.size[0]/6,body.size[0]/4
        pos:830,540
        color:0,0,0,1
        source:
        id:direction
    Image:
        size:body.size[0]/6,body.size[0]/6
        pos:960,1020
        source:'second.png'
        id:noora2
    Image:
        size:body.size[0]/6,body.size[0]/6
        pos:noora2.pos[0]-self.size[0],noora2.pos[1]
        source:'first.png'
        id:noora1
    Image:
        size:body.size[0]/6,body.size[0]/6
        pos:noora2.pos[0]+self.size[0],noora2.pos[1]
        source:'third.png'
        id:noora3
    Ta:
        pos:970,20
        id:body
    Door:
        size:body.size[0]*0.1,body.size[1]
        pos:body.pos
        id:delet
    DoorBar:
        size:body.size[0]/3,body.size[1]/20
        pos:body.pos[0]-self.size[0]/2+delet.size[0],body.pos[1]
        id:doorBar
    Bar:
        size:body.size[0],body.size[0]/6
        center_y:body.center_y
        center_x:body.center_x-body.size[0]
        id:bar
    Limit:
        size:body.size[0]/3,body.size[0]/16
        pos:first.pos[0]-first.size[0],first.pos[1]+body.size[1]/2
        id:lSwitch1
    Limit:
        size:body.size[0]/3,body.size[0]/16
        pos:second.pos[0]-first.size[0],second.pos[1]+body.size[1]/2
        id:lSwitch2
    Limit:
        size:body.size[0]/3,body.size[1]/10
        pos:third.pos[0]-first.size[0],third.pos[1]+body.size[1]/2
        id:lSwitch3
    ElLimit:
        size:body.size[0]/10,body.size[1]/10
        pos:body.pos[0]-15,body.pos[1]
        id:doorOpen
    ElLimit:
        size:body.size[0]/10,body.size[0]/10
        pos:body.pos[0]+body.size[0]+5,body.pos[1]
        id:doorClose
    Button:
        size:body.size[0]/6,body.size[0]/4
        pos:860,20
        text:'1'
        id:first
        on_press:root.moveFirst()
    Button:
        size:body.size[0]/6,body.size[0]/4
        pos:860,400
        text:'2'
        id:second
        on_press:root.moveSecond()
    Button:
        size:body.size[0]/6,body.size[0]/4
        pos:860,800
        text:'3'
        id:third
        on_press:root.moveThird()
    Button:
        pos:body.pos[0]+self.size[0],body.pos[1]+self.size[1]
        size:body.size[0]/8,body.size[1]/6
        text:'1'
        id:elFirst
        on_press:root.moveFirst()
    Button:
        pos:body.pos[0]+self.size[0],body.pos[1]+3*self.size[1]
        size:body.size[0]/8,body.size[1]/6
        text:'2'
        id:elSecond
        on_press:root.moveSecond()
    Button:
        pos:body.pos[0]+self.size[0],body.pos[1]+5*self.size[1]
        size:body.size[0]/8,body.size[1]/6
        text:'3'
        id:elThird
        on_press:root.moveThird()
    Spinner:
        text:'Logi'
        values:['Phisi','Logi','Service']
        id:status
        pos:100,500
        size:80,40
        on_text:root.changeOptions()

<Phisi>:
    status:status
    Spinner:
        text:'Phisi'
        values:['Phisi','Logi','Service']
        id:status
        pos:100,500
        size:80,40
        on_text:root.changeOptions()
    
<Service>
    status:status
    Spinner:
        text:'Service'
        values:['Phisi','Logi','Service']
        id:status
        pos:100,500
        size:80,40
        on_text:root.changeOptions()
    Label:
        pos:640,240
        text:'Please press constantly on the second floor button \nto open the door.\nPlease press constantly on the first floor button \nto bring the elevator down. \nWhen the elevator reaches the desired floor release the button.'
        font_size:'30dp'



